<main class="main-grid">
  <div class="tabs">
    <div class="tab">
      <input type="radio" id="tab-1" name="tab-group-1" checked="checked"/>
      <label class="tab-title" for="tab-1">Talente</label>
      <div class="tab-content">
        <ul class="data-list">
        {% for talent in sc.Talente | objectkeys %}
        {% set tw = sc.Talente[talent][0] %}
          <li>{{ talent }}</li>
          <progress class="talent-value" max="20" value="{{ sc.Talente[talent][0] }}"></progress>
          <progress class="learning-points" optimum="30" max="{% leRequired tw, 'D' %}" value="{{ sc.Talente[talent][1] }}"></progress>
        {% endfor %}
        </ul>
      </div>
    </div>
    <div class="tab">
      <input type="radio" id="tab-2" name="tab-group-1"/>
      <label for="tab-2">Kampf</label>
      <div class="tab-content">
        <ul class="data-list">
          <li>Waffen, Kampfwerte, Initiative, Geschwindigkeit, Sonderfertigkeiten</li>
        </ul>
      </div>
    </div>
    <div class="tab">
      <input type="radio" id="tab-3" name="tab-group-1"/>
      <label for="tab-3">Zauber</label>
      <div class="tab-content">
        <ul class="data-list">
          <li>Zauber, Sonderfertigkeiten, Initiative(?), magische Vor- und Nachteile</li>
        </ul>
      </div>
    </div>
  </div>
</main>